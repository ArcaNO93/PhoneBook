<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/contactListFragment">

    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.example.phonebook.views.ui.fragments.ContactListFragment"
        android:label="contact_list_fragment"
        tools:layout="@layout/contact_list_fragment" >
        <action
            android:id="@+id/action_create"
            app:destination="@id/contactCreationFragment" />
        <action
            android:id="@+id/action_view"
            app:destination="@id/viewContactFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactCreationFragment"
        android:name="com.example.phonebook.views.ui.fragments.ContactCreationFragment"
        android:label="fragment_contact_creation"
        tools:layout="@layout/contact_creation_fragment">
        <action
            android:id="@+id/action_create_back"
            app:destination="@id/contactListFragment"
            app:popUpTo="@+id/contactListFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/viewContactFragment"
        android:name="com.example.phonebook.views.ui.fragments.ViewContactFragment"
        android:label="view_contact_fragment"
        tools:layout="@layout/view_contact_fragment">
        <action
            android:id="@+id/action_delete"
            app:destination="@id/confirmDeletionFragment" />
        <action
            android:id="@+id/action_edit"
            app:destination="@id/contactCreationFragment" />
    </fragment>

    <dialog
        android:id="@+id/confirmDeletionFragment"
        android:name="com.example.phonebook.views.ui.fragments.ConfirmDeletionFragment"
        android:label="confirm_deletion_fragment"
        tools:layout="@layout/confirm_deletion_fragment" >
        <action
            android:id="@+id/action_delete_back"
            app:destination="@id/contactListFragment"
            app:popUpTo="@+id/contactListFragment"
            app:popUpToInclusive="true" />
    </dialog>

</navigation>